<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- ====== TITLE ====== -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HelloWorld"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Guideline chia pháº§n -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.3" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_50"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.50" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_75"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.75" />

    <!-- ====== METHOD 1 ====== -->
    <TextView
        android:id="@+id/tv_method1_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Method 1"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintBottom_toTopOf="@id/guideline_25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_minus"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="10dp"
        app:backgroundTint="#FFEB3B"
        app:layout_constraintBottom_toTopOf="@id/guideline_25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_method1_title"
        app:srcCompat="@drawable/baseline_remove_24" />

    <TextView
        android:id="@+id/tv_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="26sp"
        app:layout_constraintTop_toTopOf="@id/btn_minus"
        app:layout_constraintBottom_toBottomOf="@id/btn_minus"
        app:layout_constraintStart_toEndOf="@id/btn_minus"
        app:layout_constraintEnd_toStartOf="@id/btn_add"
        android:layout_marginHorizontal="30dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_add"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="40dp"
        app:backgroundTint="#FFEB3B"
        app:layout_constraintBottom_toTopOf="@id/guideline_25"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_method1_title"
        app:srcCompat="@drawable/baseline_add_24" />

    <!-- ====== METHOD 2 ====== -->
    <TextView
        android:id="@+id/tv_method2_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Method 2"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/guideline_25"
        app:layout_constraintBottom_toTopOf="@id/guideline_50"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_minus2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="16dp"
        android:onClick="decreaseCount2"
        app:backgroundTint="#4CAF50"
        app:layout_constraintBottom_toTopOf="@id/guideline_50"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_method2_title"
        app:srcCompat="@drawable/baseline_remove_24" />

    <TextView
        android:id="@+id/tv_count2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="26sp"
        app:layout_constraintTop_toTopOf="@id/btn_minus2"
        app:layout_constraintBottom_toBottomOf="@id/btn_minus2"
        app:layout_constraintStart_toEndOf="@id/btn_minus2"
        app:layout_constraintEnd_toStartOf="@id/btn_add2"
        android:layout_marginHorizontal="30dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_add2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="40dp"
        android:onClick="increaseCount2"
        app:backgroundTint="#4CAF50"
        app:layout_constraintBottom_toTopOf="@id/guideline_50"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_method2_title"
        app:srcCompat="@drawable/baseline_add_24" />

    <!-- ====== METHOD 3 ====== -->
    <TextView
        android:id="@+id/tv_method3_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Method 3"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/guideline_50"
        app:layout_constraintBottom_toTopOf="@id/guideline_75"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_minus3"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="40dp"
        app:backgroundTint="#03A9F4"
        app:layout_constraintBottom_toTopOf="@id/guideline_75"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_method3_title"
        app:srcCompat="@drawable/baseline_remove_24" />

    <TextView
        android:id="@+id/tv_count3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="26sp"
        app:layout_constraintTop_toTopOf="@id/btn_minus3"
        app:layout_constraintBottom_toBottomOf="@id/btn_minus3"
        app:layout_constraintStart_toEndOf="@id/btn_minus3"
        app:layout_constraintEnd_toStartOf="@id/btn_add3"
        android:layout_marginHorizontal="30dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_add3"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="40dp"
        app:backgroundTint="#03A9F4"
        app:layout_constraintBottom_toTopOf="@id/guideline_75"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_method3_title"
        app:srcCompat="@drawable/baseline_add_24" />

</androidx.constraintlayout.widget.ConstraintLayout>
